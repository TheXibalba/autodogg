<%- include("header.ejs") %>
    
    <div class="contact-form container-fluid bg-dark  ml-auto mr-auto mt-4 pb-3 pt-4 pl-2 pr-2">

        <form action="/contact" method="post" class="row pt-0">
    
            <div class="form-group text-center col-lg-12 col-sm-12">
                <p class="h4 pb-1  text-light">Need Help? Ping Us!</p>
    
            </div>
            <div class="form-group col-lg-12 col-sm-12">
                <input type="text" class="form-control" name="nameOfTheUser" id="nameOfTheUser"
                    placeholder="Enter Your Full Name" required autocapitalize="words">
    
            </div>
            <div class="form-group col-lg-12 col-sm-12">
                <input type="email" class="form-control" name="emailOfTheUser" id="emailOfTheUser"
                    placeholder="Enter Your Email" required>
    
            </div>
            <div class="form-group col-lg-12 col-sm-12">
                <input type="text" minlength="10" maxlength="10" autocomplete="off" class="form-control"
                    name="contactOfTheUser" id="contactOfTheUser" placeholder="Mobile Number" required>
    
            </div>
            <div class="form-group col-lg-12 col-sm-12">
                <input type="text" class="form-control" name="carModel" id="carModel"
                    placeholder="Car Model Name" required>

                    
                </div>
            <div class="form-group col-lg-12 col-sm-12">
                <textarea class="form-control" minlength="10" id="message" name="message" placeholder="Enter Your Message" rows="3"required ></textarea>
    </div>
                <div class="form-group text-center col-lg-12 col-sm-12 mt-2 pl-4 pr-4">
    
                    <input class="btn btn-outline-success btn-md w-100 pl-0 pr-0" type="submit" value="Send Message" name="contact"
                        id="contact">
                </div>
               
        </form>
    
    
    
    
    </div>


    <%- include("footer.ejs") %>