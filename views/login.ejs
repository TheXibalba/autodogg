<%- include("header.ejs") %>

<div class="login-form container-fluid bg-dark pb-2 pt-0">

    <form action="/login" method="post" class="row pt-0 mt-3">

        <div class="form-group col-lg-12 col-sm-12">
            <p class="h4 pb-2  text-light text-center">Customer Login</p>

        </div>
        <div class="form-group col-lg-12 col-sm-12 mt-2">
            <input type="email" class="form-control" name="emailOfTheUser" id="emailOfTheUser"
                placeholder="Enter Your Email" required>

        </div>
        <div class="form-group col-lg-12 col-sm-12">
            <input type="password" class="form-control" name="passwordOfTheUser" id="passwordOfTheUser"
                placeholder="Password" required>
</div>
            <div class="form-group col-lg-12 col-sm-12 mt-3 mb-1">

                <input class="btn btn-outline-success w-100" type="submit" value="Log in" name="login"
                    id="login">
            </div>
            <div class="form-group col-lg-12 col-sm-12 mt-0">

                <a class="btn btn-outline-info w-100" href="/signup">New user?</a>
            </div>
    </form>




</div>


<%- include("footer.ejs") %>