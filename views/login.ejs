<%- include("header.ejs") %>

<div class="login-form jumbotron bg-dark d-flex justify-content-center w-25 ml-auto mr-auto mt-5 pb-2 pt-4">

    <form action="/login" method="post" class="w-100 pt-0">

        <div class="form-group d-flex justify-content-center">
            <p class="h3 font-weight-bold text-light">Customer Login</p>

        </div>
        <div class="form-group">
            <input type="email" class="form-control" name="emailOfTheUser" id="emailOfTheUser"
                placeholder="Enter Your Email" required>

        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="passwordOfTheUser" id="passwordOfTheUser"
                placeholder="Password" required>

            <div class="form-group d-flex justify-content-center mt-4">

                <input class="btn btn-outline-success btn-md w-100" type="submit" value="Log in" name="login"
                    id="login">
            </div>
            <div class="form-group d-flex justify-content-center">

                <a class="btn btn-outline-info btn-md w-100" href="/signup">New user?</a>
            </div>
    </form>




</div>


<%- include("footer.ejs") %>